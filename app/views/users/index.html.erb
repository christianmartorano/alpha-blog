<h1 class="center">Listing all Alpha Blogger's</h1>
<div class="center">
  <%= will_paginate @users %>
    <% @users.each do |user| %>
        <ul class="listing">
          <div class="row">
            <div class="well col-md-4 col-md-offset-4">
              <li><%= link_to gravator_for(user), user_path(user) %></li>
              <div class="article-title">
                <li><%= link_to user.username, user_path(user) %></li>
              </div>
              <% if logged_in? && current_user.admin? %>
                <div class="article-title">
                  <li><%= link_to "Delete user", user_path(user),
                        method: :delete, data: {confirm: "Are you sure, delete user #{user.username} ?"}, 
                        class: "btn btn-danger btn-xs" %></li>
                </div>
              <% end %>
              <div class="article-meta-details">
                <li><small>Created <%= pluralize(user.articles.count, "article") %></small></li>
              </div>
            </div>
          </div>
        </ul>
    <% end %>
  <%= will_paginate @users %>
</div>