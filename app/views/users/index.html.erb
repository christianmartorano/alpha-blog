<h1 align="center">Listing all Alpha Blogger's</h1>
<% @users.each do |user| %>
  <div class="center">
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravator_for(user), user_path(user) %></li>
          <div class="article-title">
            <li><%= link_to user.username, user_path(user) %></li>
          </div>
          <div class="article-meta-details">
            <li><small>Created <%= pluralize(user.articles.count, "article") %></small></li>
          </div>
        </div>
      </div>
    </ul>
  </div>
<% end %>