<h1 class="center">Listing all Categories</h1>
<div class="center">
  <%= will_paginate %>
    <% @categories.each do |category| %>
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <ul class="listing">
            <li class="article-title"><%= link_to "#{category.name}", category_path(category)%></li>
            <li class="article-meta-detail"><small><%= pluralize(category.articles.count, "article") %></small></li>
          </ul>
        <% if logged_in? && current_user.admin? %>
          <div class="articles-actions">
            <%= link_to "Edit the category", edit_category_path(category), class: "btn btn-xs btn-success" %>    
          </div>
        <% end %>
        </div>
      </div>
    <% end %>
  <%= will_paginate %>
</div>